{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Veya",
  "version": "0.1.0",
  "identifier": "com.fangzhiheng.veya",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Veya",
        "visible": false,
        "width": 800,
        "height": 600
      },
      {
        "label": "floating",
        "title": "Veya Floating",
        "url": "/",
        "width": 420,
        "height": 520,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "resizable": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
